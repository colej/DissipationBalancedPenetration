! inlist to evolve a 02 solar mass star

! For the sake of future readers of this file (yourself included),
! ONLY include the controls you are actually using.  DO NOT include
! all of the other controls that simply have their default values.

&star_job
  ! see star/defaults/star_job.defaults

  ! begin with a pre-main sequence model
    create_pre_main_sequence_model = .false.

  ! save a model at the end of the run
    save_model_when_terminate = .false.
    save_model_filename = '02M_at_TAMS.mod'

  ! display on-screen plots
    pgstar_flag = .false.


    history_columns_file = '/lhome/colej/astro/grids/penetration_tracks/penetration_models/history_columns.list' 
    profile_columns_file = '/lhome/colej/astro/grids/penetration_tracks/penetration_models/profile_columns.list'


    initial_zfracs = 8
    !change_initial_Z = .true.
    !change_initial_Y = .true.
    !new_Z = 0.0142
    !new_Y = 0.276

/ ! end of star_job namelist


&eos
  ! eos options
  ! see eos/defaults/eos.defaults

/ ! end of eos namelist


&kap
  ! kap options
  ! see kap/defaults/kap.defaults
  kap_file_prefix = 'OP_a09_nans_removed_by_hand'
    use_Type2_opacities = .true.
    Zbase = 0.02
    cubic_interpolation_in_X = .false.
    cubic_interpolation_in_Z = .false.

/ ! end of kap namelist


&controls


  !! Output
    log_directory = '/lhome/colej/astro/grids/penetration_tracks/penetration_models/LOGS/'



    terminal_interval = 100
    do_history_file = .true.
    history_interval = 1
    star_history_name = '02Msun_penetration_ExpOv.history'

    write_profiles_flag = .true.
    profile_interval = 100
    profile_data_prefix = '02Msun_penetration_ExpOv_'
    profile_data_suffix = '.profile'

    write_pulse_data_with_profile = .true.
    pulse_data_format = 'GYRE'
    add_atmosphere_to_pulse_data = .true.
    add_center_point_to_pulse_data = .true.
    keep_surface_point_for_pulse_data = .true.
    interpolate_rho_for_pulse_data = .true.

  ! see star/defaults/controls.defaults

  ! starting specifications
    initial_mass = 2.0 ! in Msun units
    initial_z = 0.02
    !initial_y = 0.276

  ! when to stop

    ! stop when the star nears ZAMS (Lnuc/L > 0.99)
    ! Lnuc_div_L_zams_limit = 0.99d0
    stop_near_zams = .false.

    ! stop when the center mass fraction of h1 drops below this limit
    xa_central_lower_limit_species(1) = 'h1'
    xa_central_lower_limit(1) = 1d-6

  ! wind

  ! atmosphere
    ! atm_option = 'T_tau'
    atm_option = 'T_tau'
    atm_T_tau_relation = 'Krishna_Swamy'    
    atm_T_tau_opacity = 'iterated'

  ! rotation

  ! element diffusion

  !! Convection 

  ! mlt

   mixing_length_alpha = 1.8d0
   MLT_option = 'Cox'

   use_Ledoux_criterion = .true.
   do_conv_premix = .false.

   num_cells_for_smooth_gradL_composition_term = 10
   threshold_for_smooth_gradL_composition_term = 0.02

   num_cells_for_smooth_brunt_B = 10
   threshold_for_smooth_brunt_B = 0.1


   predictive_mix(1) = .true.
   predictive_zone_type(1) = 'any'
   predictive_zone_loc(1) = 'core'
   predictive_bdy_loc(1) = 'top'

  ! Overshooting
    overshoot_scheme(1) = 'exponential'
    overshoot_zone_type(1) = 'burn_H'
    overshoot_zone_loc(1) = 'core'
    overshoot_bdy_loc(1) = 'top'

    overshoot_f0(1) = 0.005
    overshoot_f(1) = 0.01
    ! overshoot_D0(1) = 0.005



  ! timesteps
    varcontrol_target = 1d-4
    min_allowed_varcontrol_target = 1d-5


  ! mesh

    max_allowed_nz = 10000
    mesh_delta_coeff = 0.4

  ! solver
     ! options for energy conservation (see MESA V, Section 3)
     energy_eqn_option = 'dedt'
     use_gold_tolerances = .true.

  ! reaction nets
    default_net_name = 'cno_extras_o18_to_mg26_plus_fe56.net'


/ ! end of controls namelist
